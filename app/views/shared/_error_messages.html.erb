<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力内容に誤りがあります。 エラー件数：<%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
